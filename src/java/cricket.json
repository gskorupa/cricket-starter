{
    "@type": "org.cricketmsf.config.ConfigSet",
    "description": "This is sample configuration",
    "services": [
        {
            "@type": "org.cricketmsf.config.Configuration",
            "id": "BasicService",
            "service": "org.cricketmsf.example.BasicService",
            "host": "0.0.0.0",
            "port": "8080",
            "threads": 0,
            "filter": "org.cricketmsf.SecurityFilter",
            "cors": ["Access-Control-Allow-Origin:*"],
            "adapters": {
                "greeter": {
                    "name": "greeter",
                    "interfaceName": "HttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.SimpleHttpAdapter",
                    "properties": {
                        "context": "/greeting",
                        "extended-response": "false"
                    }
                },
                "ScriptingService": {
                    "name": "ScriptingService",
                    "interfaceName": "HttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.ScriptingAdapter",
                    "properties": {
                        "context": "/script",
                        "response-type": "JSON",
                        "silent-mode": "false"
                    }
                },
                "ScriptingEngine": {
                    "name": "ScriptingEngine",
                    "interfaceName": "ScriptingAdapterIface",
                    "classFullName": "org.cricketmsf.out.script.NashornScriptingAdapter",
                    "properties": {
                        "script-file": "./script.js"
                    }
                },
                "EchoHttpAdapterIface": {
                    "name": "EchoHttpAdapterIface",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/echo",
                        "silent-mode": "false"
                    }
                },
                "LoggerAdapterIface": {
                    "name": "LoggerAdapterIface",
                    "interfaceName": "LoggerAdapterIface",
                    "classFullName": "org.cricketmsf.out.log.StandardLogger",
                    "properties": {
                        "name": "EchoService",
                        "level": "ALL",
                        "log-file-name": "./data/cricket.log",
                        "console": "true"
                    }
                },
                "nosql": {
                    "name": "nosql",
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "org.cricketmsf.out.db.KeyValueStore",
                    "properties": {
                        "path": "./data",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "nosql.xml",
                        "max-records": "100",
                        "persistent": "true"
                    }
                },
                "webCache": {
                    "name": "webCache",
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "org.cricketmsf.out.db.KeyValueStore",
                    "properties": {
                        "path": "./data",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "webcache.xml",
                        "max-records": "100",
                        "persistent": "false"
                    }
                },
                "SchedulerIface": {
                    "name": "SchedulerIface",
                    "interfaceName": "SchedulerIface",
                    "classFullName": "org.cricketmsf.in.scheduler.Scheduler",
                    "properties": {
                        "path": "./data",
                        "envVariable": "SCHEDULER_DB_PATH",
                        "file": "scheduler.xml"
                    }
                },
                "FileReaderAdapterIface": {
                    "name": "FileReaderAdapterIface",
                    "interfaceName": "FileReaderAdapterIface",
                    "classFullName": "org.cricketmsf.out.file.FileReaderAdapter",
                    "properties": {
                        "root": "./www/"
                    }
                },
                "HtmlGenAdapterIface": {
                    "name": "HtmlGenAdapterIface",
                    "interfaceName": "HtmlGenAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.HtmlGenAdapter",
                    "properties": {
                        "context": "/",
                        "use-cache": "true"
                    }
                },
                "H2EmbededIface": {
                    "name": "H2EmbededIface",
                    "interfaceName": "H2EmbededIface",
                    "classFullName": "org.cricketmsf.out.db.H2Embeded",
                    "properties": {
                        "path": "./data",
                        "file": "servicedb",
                        "test-query": "select * from serviceversion;"
                    }
                },
                "watchdog": {
                    "name": "watchdog",
                    "interfaceName": "WatchdogIface",
                    "classFullName": "org.cricketmsf.in.file.Watchdog",
                    "properties": {
                        "path": "./www",
                        "sampling-interval": "1000"
                    }
                },
                "<!--CLI-->": {
                    "comment": "adapter can be deactivater by changing it's ID - we can use html comment approach",
                    "name": "CLI",
                    "interfaceName": "CliIface",
                    "classFullName": "org.cricketmsf.in.cli.Cli",
                    "properties": {
                        "sampling-interval": "100"
                    }
                }
            }
        },
        {
            "@type": "org.cricketmsf.config.Configuration",
            "id": "dockerized",
            "service": "org.cricketmsf.example.BasicService",
            "host": "0.0.0.0",
            "port": "8080",
            "threads": 0,
            "filter": "org.cricketmsf.SecurityFilter",
            "adapters": {
                "EchoHttpAdapterIface": {
                    "name": "EchoHttpAdapterIface",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/echo"
                    }
                },
                "ScriptingService": {
                    "name": "ScriptingService",
                    "interfaceName": "HttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.ScriptingAdapter",
                    "properties": {
                        "context": "/script",
                        "response-type": "JSON",
                        "silent-mode": "false"
                    }
                },
                "ScriptingEngine": {
                    "name": "ScriptingEngine",
                    "interfaceName": "ScriptingAdapterIface",
                    "classFullName": "org.cricketmsf.out.script.NashornScriptingAdapter",
                    "properties": {
                        "script-file": "./config/script.js"
                    }
                },
                "LoggerAdapterIface": {
                    "name": "LoggerAdapterIface",
                    "interfaceName": "LoggerAdapterIface",
                    "classFullName": "org.cricketmsf.out.log.StandardLogger",
                    "properties": {
                        "name": "EchoService",
                        "level": "ALL",
                        "log-file-name": "./data/cricket.log"
                    }
                },
                "KeyValueCacheAdapterIface": {
                    "name": "KeyValueCacheAdapterIface",
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "org.cricketmsf.out.db.KeyValueStore",
                    "properties": {
                        "path": "./data",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "echo.xml",
                        "max-records": "100",
                        "persistent": "true"
                    }
                },
                "SchedulerIface": {
                    "name": "SchedulerIface",
                    "interfaceName": "SchedulerIface",
                    "classFullName": "org.cricketmsf.in.scheduler.Scheduler",
                    "properties": {
                        "path": "./data",
                        "envVariable": "SCHEDULER_DB_PATH",
                        "file": "scheduler.xml"
                    }
                },
                "FileReaderAdapterIface": {
                    "name": "FileReaderAdapterIface",
                    "interfaceName": "FileReaderAdapterIface",
                    "classFullName": "org.cricketmsf.out.file.FileReaderAdapter",
                    "properties": {
                        "root": "./www/"
                    }
                },
                "HtmlGenAdapterIface": {
                    "name": "HtmlGenAdapterIface",
                    "interfaceName": "HtmlGenAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.HtmlGenAdapter",
                    "properties": {
                        "context": "/"
                    }
                },
                "H2EmbededIface": {
                    "name": "H2EmbededIface",
                    "interfaceName": "H2EmbededIface",
                    "classFullName": "org.cricketmsf.out.db.H2Embeded",
                    "properties": {
                        "path": "./data",
                        "file": "servicedb",
                        "test-query": "select * from serviceversion;"
                    }
                }
            }
        }
    ]
}